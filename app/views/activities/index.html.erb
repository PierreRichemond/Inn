<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://api.cloudly.space/resize/clip/1200/760/75/aHR0cDovL21lZGlhcy50b3VyaXNtLXN5c3RlbS5jb20vOS8zLzYxMjM5OF9fZXJpY19zYW5kZXIuanBn/image.jpg');">
  <div class="container">
    <h1 class= "text-center"><%= t(".header") %></h1>
  </div>
</div>
<div class="activity-container">
  <div class= "text-center m-5" >
    <% Activity::TAGS.each do |tag| %>
      <%= link_to tag, activities_path(tag: tag), class: "btn-lg btn-success tag-btn button" %>
    <% end %>
  </div>
  <div class="container my-3">
    <div class="row">
      <div class="col-12 col-md-6 col-lg-6">
        <div class="row">
          <% @activities.each do |activity| %>
            <div class="col-12 col-md-6">
              <a href="#" class="card-link d-flex" data-toggle="modal" data-target="#exampleModalCenter-<%= activity.id %>">
                <%= render 'activity-card', activity: activity %>
              </a>
              <%= render "modal", activity: activity %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-12 col-md-6 col-lg-6">
        <div id="map"
     style="width: 100%; height: 800px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  </div>
</div>
