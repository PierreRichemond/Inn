

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <!-- Insert form here -->
      <h2 class='text-center'><%= t(".sign_in") %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, style: "display:inline;", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_in"), class: "btn btn-primary" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<%= link_to t(".sign_up"), new_user_registration_url %>


    </div>
  </div>
</div>
