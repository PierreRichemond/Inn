<%= form_for room, url: bookings_path, remote: true do |f| %>
  <div class="col-md-6">
    <%= f.label :name %></br>
  <%= f.text_field  :name, required: true, class: "" %></br>
<%= f.label :email %></br>
<%= f.text_field :email, required: true, class: "" %></br>
<%= f.label :message %></br>
<%= f.text_area :message, rows: 8, cols: 40, required: true, class: "",
                        placeholder: "Send me a message"%></br>
<div class= "d-none">
  <%= f.label :nickname %>
  <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
</div>
<%= f.submit 'Send Message', class: 'btn btn-primary' %>
</div>
<% end %>
<div class="col-md-6" id="flash-message">
</div>
