<div class="row m-3">
  <div class="col-12 col-lg-9">
    <% @rooms.each do |room| %>
      <div class ="room_card">
        <div class="container">
          <div class="text">
            <h2 class= "text-center"><%= room.name %></h2>
            <h3 class= "text-center"><%= room.price %>â‚¬</h3>
            <h3 class= "text-center"><%= room.ppl %></h3>
            <p><%= room.description %></p>
            <p><span style="font-size:20px;"><%= t(".floor1") %>:</span> <%= room.details %></p>
            <p><span style="font-size:20px;"><%= t(".floor2") %>:</span> <%= room.detailz %></p>
          </div>
          <div class="row ">
            <div class="col-12 col-md-6 col-lg-8  owl-carousel owl-theme">
              <% room.images.each do |image| %>
                <div><%= cl_image_tag image.key%></div>
              <% end %>
            </div>
            <div id="calendars">
              <%= render partial: "calendar" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-12 col-lg-3">
    <%= render partial: "table" %>
  </div>
</div>
