<!-- app/views/bookings/show.html.erb -->
<div class="container">
  <div class="row">
    <div class="col-md-3 owl-carousel owl-theme">
      <% room.images.each do |image| %>
        <div><%= cl_image_tag image.key%></div>
      <% end %>
    </div>
    <div class="col">
      <h1>booking #<%= @booking.id %> <small><span class="badge badge-primary"><%= @booking.state %></span></small></h1>
      <ul class="list-unstyled">
        <li><strong>ISSUED ON</strong> <%= @booking.created_at.to_date %></li>
        <li><strong>room</strong> <%= @booking.room.name %> [<%= @booking.room_name %>]</li>
        <li><strong>TOTAL</strong> <%= humanized_money_with_symbol @booking.amount %></li>
      </li>
    </ul>
    <p>Estimated delivery in <strong>2 business days</strong></p>
  </div>
</div>
</div>
