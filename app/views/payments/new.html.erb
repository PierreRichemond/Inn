<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6  owl-carousel owl-theme">
      <% @booking.room.images.each do |image| %>
        <div><%= cl_image_tag image.key%></div>
      <% end %>
    </div>
    <div class= "col-12 col-lg-6">
      <h3 class='text-center'><strong>ISSUED ON</strong> <%= @booking.created_at.to_date %></h3>
      <p class='ml-3'> <strong>Room :</strong> <%= @booking.room.name %></p>
      <p class='ml-3'><strong>From</strong> <%= @booking.start_date %></p>
      <p class='ml-3'><strong>Until</strong> <%= @booking.end_date + 1 %></p>
      <p class='ml-3'> <strong>number of nights:</strong> <%= (@booking.end_date - @booking.start_date).to_i + 1 %></p>
      <p class='ml-3'> <strong>Price per night</strong> <%= humanized_money_with_symbol @booking.amount %></p>
      <h4 class='ml-3'> <strong>TOTAL</strong> €<%= price_of_stay(@booking.room.price, (@booking.end_date - @booking.start_date).to_i + 1) %></h4>

      <button id="pay" class="btn btn-primary button-pay">Pay</button>
    </div>
  </div>
      <% if (@booking.end_date - @booking.start_date).to_i + 1 > 4%>
      <div class="row">
        <div class= "col-12 col-lg-6">
          <h3 class='mt-1 text-center'><%= t('renting-detail') %></h3>
          <h3 class='text-center'><%= t('discount') %></h3>
          <p class='text-center'><%= t('discounts_html') %></p>
        </div>
        <div class= "col-12 col-lg-6">
        <h3>Details</h3>
          <p>4 nights: <%= price_of_stay(@booking.room.price, 4) %></p>
          <p>5-6 nights: <%= price_of_stay(@booking.room.price, 6) - price_of_stay(@booking.room.price, 4) %>€</p>
          <p>7 night: <%= price_of_stay(@booking.room.price, 7) - price_of_stay(@booking.room.price, 6) %>€</p>
          <p>after 7th night: <%= (@booking.end_date - @booking.start_date).to_i + 1 - 7 %> * <%= price_of_stay(@booking.room.price, 8) - price_of_stay(@booking.room.price, 7) %>€ = <%= price_of_stay(@booking.room.price, (@booking.end_date - @booking.start_date).to_i + 1) - price_of_stay(@booking.room.price, 7) %>€</p>
          </div>
      </div>
      <% end %>
</div>

      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @booking.checkout_session_id %>'
          });
        });
      </script>
